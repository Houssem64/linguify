generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  phoneNumber String
  // cin String 
  // iban String
  // edinar String
  // verified Boolean @default(false)
  
}
model Payment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  cvv     String
  cardNumber     String
  email    String
  expirationMonth String
  expirationYear String
  createdAt DateTime @default(now())
  
}


